<header class="page-header wrapper">
  <%= link_to image_tag('logo.png'), root_path, class: "logo" %>
  <% if logged_in? %>
    <nav>
      <ul class="main-nav">
        <li><%= "『#{current_user.name}』でログイン中" %></li>
        <li><%= link_to "ログアウト", logout_path, data: { "turbo-method": :delete } %></li>
      </ul>
    </nav>
  <% else %>
    <nav>
      <ul class="main-nav">
        <li><%= link_to "ログイン", login_path(original_url: request.original_url) %></li>
        <li><%= link_to "新規登録", signup_path %></li>
      </ul>
    </nav>
  <% end %>
</header>

<% @student_num = flash[:student_num].to_i if flash[:student_num] %>

<% provide(:title, "掃除当番表(自動生成)") %>
<h1 class="text-center"><%= yield(:title) %></h1>

<div class="cleaning_duty">

  <%= form_with(url: cleaning_duty_create_list_path) do |f| %>

    <%= f.label :student_num, "生徒数" %> <br>
    <%= f.select :student_num, (1..45).to_a, { selected: @student_num }, class: 'form-control' %> <br>

    <%= f.submit "生徒数の指定", class: "btn btn-primary" %>

  <% end %>

  <%= render 'table' %>

</div>
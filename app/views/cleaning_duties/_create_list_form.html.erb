<div class="create_list_form">
  <%= form_with(url: cleaning_duty_create_list_path) do |f| %>

    <%= f.label :student_num, "生徒数" %> <br>
    <%= f.select :student_num, (1..45).to_a, { selected: @student_num }, class: 'form-control' %> <br>

    <%= f.submit "生徒数の指定", class: "btn btn-primary" %> <br>

    <br>

    <%= f.label :group_num, "グループ数" %> <br>
    <%= f.select :group_num, (1..20).to_a, { selected: @group_num }, class: 'form-control' %> <br>

    <%= f.submit "グループ数の指定", class: "btn btn-primary" %>

  <% end %>
</div>
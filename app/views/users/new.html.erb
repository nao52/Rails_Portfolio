<% provide(:title, 'Sign up') %>
<h1 class="text-center">新規登録</h1>

<div class="row">
  <div>

    <%= form_with(model: @user) do |f| %>

      <%= f.label :name, "名前" %> <br>
      <%= f.text_field :name, class: 'form-control' %> <br>

      <%= f.label :email, "メールアドレス" %> <br>
      <%= f.email_field :email, class: 'form-control' %> <br>

      <%= f.label :password, "パスワード" %> <br>
      <%= f.password_field :password, class: 'form-control' %> <br>

      <%= f.label :password_confirmation, "確認用パスワード" %> <br>
      <%= f.password_field :password_confirmation, class: 'form-control' %> <br>

      <%= f.label :profile, "プロフィール(任意)" %> <br>
      <%= f.text_area :profile, class: 'form-control' %> <br>

      <%= f.submit "新規ユーザー登録", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
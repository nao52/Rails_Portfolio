<%= form_with(model: @user) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>

  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "確認用パスワード" %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :subject_id, "担当教科" %>
  <%= f.select :subject_id, make_select_form(Subject.all),  { include_blank: "選択してください" } %>
  
  <%= f.label :club_id, "担当部活動" %>
  <%= f.select :club_id, make_select_form(Club.all), { include_blank: "選択してください" } %>

  <%= f.label :kinds_of_school_id, "校種" %>
  <%= f.select :kinds_of_school_id, make_select_form(KindsOfSchool.all), { include_blank: "選択してください" } %>

  <%= f.label :profile, "プロフィール(任意)" %>
  <%= f.text_area :profile %>

  <%= f.label :image, "プロフィール画像(任意)" %>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </span>
 

  <%= f.submit yield(:button_text), class: "button" %>
<% end %>
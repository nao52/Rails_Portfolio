<%= form_with url: search_users_url, method: :get, class: "search_form" do |f| %>

  <h3>検索条件</h3>
  <%= f.radio_button :condition, "name", checked: true, id: "condition_name" %>
  <%= f.label :condition, "名前", {value: "name", style: "display: inline-block;" } %>
  <%= f.radio_button :condition, "subject", checked: @checked_subject, id: "condition_subject" %>
  <%= f.label :condition, "担当教科", {value: "subject", style: "display: inline-block;"} %>
  <%= f.radio_button :condition, "club", checked: @checked_club, id: "condition_club" %>
  <%= f.label :condition, "担当部活動", {value: "club", style: "display: inline-block;"} %>

  <div id="search_name" class="hidden">
    <%= f.text_field :name, value: @name, placeholder: "ユーザー名を入力" %>
  </div>

  <div id="search_subject" class="hidden">
    <%= f.select :subject, make_select_form(Subject.all), { include_blank: "教科を選択", selected: @subject } %>
  </div>

  <div id="search_club" class="hidden">
    <%= f.select :club, make_select_form(Club.all), { include_blank: "部活動を選択", selected: @club } %>
  </div>

  <%= f.submit "検索", class: "button" %>

<% end %>
